@using System.Web.Optimization;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>In mã barcode</title>
    @Styles.Render("~/Content/css")
</head>
<body style="padding: 0; margin: 0;">
    <div style="width: 500px; height: 100px">
        <div class="row">
            <div class="col-md-3">
                <img src="~/Styles/Images/Giay_in_35x25.png" style="width: 100px; height: 100px; border: silver solid thin; border-radius: 3px" />
            </div>
            <div class="col-md-9">
                <p style="padding-bottom: 36px">Mẫu giấy cuộn 2 nhãn (Khổ giấy in nhãn 35x25mm)</p>
                <a onclick="PrintProductCode();" class="btn btn-primary btn-flat">
                    <i class="fa fa-barcode"></i>
                    Xem bản in
                </a>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    function PrintProductCode()
    {
        var mywindow = window.open('@Url.Action("PrintProduct","Printer", new{ productCode = "P000001"})', 'PRINT', 'height=800,width=1000');
         // necessary for IE >= 10*/
        WaitForLoadComplete(mywindow);
        return true;
    }

    function WaitForLoadComplete(window) {
        setTimeout(function() {
                var content = window.document.querySelector('body').innerHTML;

                if (content.length) {
                    window.print();
                    window.close();
                } else {
                    WaitForLoadComplete();
                }
            },
            200);
    }
</script>